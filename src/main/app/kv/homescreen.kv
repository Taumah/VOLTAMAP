#:import utils kivy.utils
#:include homemapview.kv

<HomeScreen>:
    MDBoxLayout:
        orientation : "vertical"
        md_bg_color: 1, 1, 1, 1
        MDToolbar:
            title: "ToolBar"
            left_action_items: [["menu" , lambda x : print("Menu button is pressed")]]
            #right_action_items: [["magnify", lambda x: app.search_menu.open()]]
            right_action_items: [["magnify", lambda x: print("Search button is clicked")]]
            md_bg_color: app.theme_cls.primary_light
            #pos_hint: {"top": .895, "left": 1}
            size_hint: 1, .1
        HomeMapView:
            pos_hint: {"top": .795, "left": 1}
            size_hint: 1, .695
            id: mapview
        NavBar:
            id: navbar
            size_hint: .85, .05
            pos_hint: {"center_x": .5, "center_y": .1}
            elevation: 10
            md_bg_color: 1,1,1,1
            radius: [16]
            width: self.width
            MDGridLayout:
                cols: 4
                size_hint_x: .9
                spacing : 8
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                AnchorLayout:
                    MDIconButton:
                        id: nav_icon1
                        icon: "map"
                        ripple_scale: 0
                        user_font_size: "30sp"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                AnchorLayout:
                    MDIconButton:
                        id: nav_icon2
                        icon: "transit-connection-variant"
                        ripple_scale: 0
                        user_font_size: "30sp"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                AnchorLayout:
                    MDIconButton:
                        id: nav_icon3
                        icon: "account-group"
                        ripple_scale: 0
                        user_font_size: "30sp"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                AnchorLayout:
                    MDIconButton:
                        id: nav_icon4
                        icon: "account"
                        ripple_scale: 0
                        user_font_size: "30sp"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1

